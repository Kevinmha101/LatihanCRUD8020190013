<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tambah">

    <EditText
        android:id="@+id/txt_merek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Merek"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/txt_jenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jenis"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_merek"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_merek"
        app:layout_constraintTop_toBottomOf="@+id/txt_merek"
        app:layout_constraintVertical_bias="0.099" />

    <EditText
        android:id="@+id/txt_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Harga"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_jenis"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_jenis"
        app:layout_constraintTop_toBottomOf="@+id/txt_jenis" />

    <Button
        android:id="@+id/smpbtn"
        android:layout_width="99dp"
        android:layout_height="42dp"
        android:layout_marginTop="55dp"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="@+id/txt_harga"
        app:layout_constraintStart_toStartOf="@+id/txt_harga"
        app:layout_constraintTop_toBottomOf="@+id/txt_harga" />
</androidx.constraintlayout.widget.ConstraintLayout>